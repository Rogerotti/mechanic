{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "ES6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ],
}