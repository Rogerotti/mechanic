{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration":true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "src/types"
    ],
    "paths": {
      "@assets/*": ["./public/*"],
      "@core-components/*": ["./src/core-components/*"],
    }
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "src/types/**/*",
    "setup-tests.ts"
  ]
}