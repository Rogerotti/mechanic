{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration":true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "types/**/*",
    "setup-tests.ts"
  ]
}