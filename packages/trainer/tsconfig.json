{
  "compilerOptions": {
    "types": ["jest", "node"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "@ui": ["../ui/src"],
      "@ui/*": ["../ui/src/*"],
      "@assets/*": ["./src/public/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
}